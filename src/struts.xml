<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="user-manager" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="list" class="main.java.com.soft.usermanager.action.UserManagerAction" method="getList" >
            <result name="success" type="tiles">showList.tiles</result>
        </action>

        <action name="add" class="main.java.com.soft.usermanager.action.UserManagerAction" method="getAddForm">
            <result name="success" type="tiles">showAddForm.tiles</result>
        </action>

        <action name="register" class="main.java.com.soft.usermanager.action.RegisterAction" method="execute">
            <result name="success" type="tiles">showList.tiles</result>
            <result name="error" type="tiles">showAddForm.tiles</result>
            <result name="input" type="tiles">showList.tiles</result>
        </action>
    </package>
</struts>